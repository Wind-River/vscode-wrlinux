{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
            "SDKROOT": "${config:wrlinuxsdk.sdkroot}",
            "SDKTARGETSYSROOT": "${config:wrlinuxsdk.sdktargetsysroot}",
            "PATH": "${config:wrlinuxsdk.sdkroot}/sysroots/${config:wrlinuxsdk.hosttriplet}/usr/bin:${config:wrlinuxsdk.sdkroot}/sysroots/${config:wrlinuxsdk.hosttriplet}/usr/bin/../${config:wrlinuxsdk.hosttriplet}/bin:${config:wrlinuxsdk.sdkroot}/sysroots/${config:wrlinuxsdk.hosttriplet}/usr/bin/${config:wrlinuxsdk.targetarchtriplet}:${config:wrlinuxsdk.sdkroot}/sysroots/${config:wrlinuxsdk.hosttriplet}/usr/bin/${config:wrlinuxsdk.targetarchtriplet}-musl:${env:PATH}",
            "PKG_CONFIG_SYSROOT_DIR": "${config:wrlinuxsdk.sdktargetsysroot}",
            "PKG_CONFIG_PATH": "${config:wrlinuxsdk.sdktargetsysroot}/usr/lib/pkgconfig:${config:wrlinuxsdk.sdktargetsysroot}/usr/share/pkgconfig",
            "CONFIG_SITE": "${config:wrlinuxsdk.sdkroot}/site-config-${config:wrlinuxsdk.targettriplet}",
            "OECORE_NATIVE_SYSROOT": "${config:wrlinuxsdk.sdkroot}/sysroots/${config:wrlinuxsdk.hosttriplet}",
            "OECORE_TARGET_SYSROOT": "${config:wrlinuxsdk.sdktargetsysroot}",
            "OECORE_ACLOCAL_OPTS": "-I ${config:wrlinuxsdk.sdkroot}/sysroots/${config:wrlinuxsdk.hosttriplet}/usr/share/aclocal",
            "OECORE_BASELIB": "lib",
            "OECORE_TARGET_ARCH": "aarch64",
            "OECORE_TARGET_OS": "linux",
            "CC": "aarch64-poky-linux-gcc   -march=armv8-a -mtune=generic  -fstack-protector-strong  -D_FORTIFY_SOURCE=2 -Wformat -Wformat-security -Werror=format-security --sysroot=${config:wrlinuxsdk.sdktargetsysroot}",
            "CXX": "aarch64-poky-linux-g++  -m64 -march=nehalem -mtune=generic -mfpmath=sse -msse4.2 -fstack-protector-strong  -D_FORTIFY_SOURCE=2 -Wformat -Wformat-security -Werror=format-security --sysroot=${config:wrlinuxsdk.sdktargetsysroot}",
            "CPP": "aarch64-poky-linux-gcc -E  -m64 -march=nehalem -mtune=generic -mfpmath=sse -msse4.2 -fstack-protector-strong  -D_FORTIFY_SOURCE=2 -Wformat -Wformat-security -Werror=format-security --sysroot=${config:wrlinuxsdk.sdktargetsysroot}",
            "AS": "aarch64-poky-linux-as  ",
            "LD": "aarch64-poky-linux-ld   --sysroot=${config:wrlinuxsdk.sdktargetsysroot}",
            "GDB": "aarch64-poky-linux-gdb",
            "STRIP": "aarch64-poky-linux-strip",
            "RANLIB": "aarch64-poky-linux-ranlib",
            "OBJCOPY": "aarch64-poky-linux-objcopy",
            "OBJDUMP": "aarch64-poky-linux-objdump",
            "AR": "aarch64-poky-linux-ar",
            "NM": "aarch64-poky-linux-nm",
            "M4": "m4",
            "TARGET_PREFIX": "aarch64-poky-linux-",
            "CONFIGURE_FLAGS": "--target=aarch64-poky-linux --host=aarch64-poky-linux --build=x86_64-linux --with-libtool-sysroot=${config:wrlinuxsdk.sdktargetsysroot}",
            "CFLAGS": " -O2 -pipe -g -feliminate-unused-debug-types ",
            "CXXFLAGS": " -O2 -pipe -g -feliminate-unused-debug-types ",
            "LDFLAGS": "-Wl,-O1 -Wl,--hash-style=gnu -Wl,--as-needed -Wl,-z,relro,-z,now",
            "CPPFLAGS": "",
            "KCFLAGS": "--sysroot=${config:wrlinuxsdk.sdktargetsysroot}",
            "OECORE_DISTRO_VERSION": "${config:wrlinuxsdk.distroversion}",
            "OECORE_SDK_VERSION": "${wrlinuxsdk.sdkversion}",
            "ARCH": "arm64",
            "CROSS_COMPILE": "aarch64-poky-linux-"
        }
    },
    "tasks": [
        {
            "label": "Print Environment Variables",
            "type": "shell",
            "command": "printenv",
            "args": [
            ],
            "problemMatcher": [
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "WRLinux SDK GCC C Compiler",
            "type": "shell",
            "command": "$CC",
            "args": [
                "-g",
                "${CFLAGS}",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "WRLinux SDK Make",
            "type": "shell",
            "command": "make",
            "args": [
                ""
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "WRLinux SDK Make Target...",
            "type": "shell",
            "command": "make",
            "args": [
                "${input:maketarget}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
              "kind": "build",
              "isDefault": true
            }            
        },
        {
            "label": "Launch QEMU",
            "type": "shell",
            "windows": {
                // Not tested
                "command": "start -FilePath 'qemu-system-x86_64' -ArgumentList '-S -gdb tcp::1234 -boot d -cdrom wrlinux.iso -m 512'"
            },
            "linux": {
                "command": "qemu-system-aarch64 -device virtio-net-device,netdev=net0,mac=52:54:00:12:35:02 -netdev user,id=net0,hostfwd=tcp::2222-:22,hostfwd=tcp::2323-:23,hostfwd=tcp::1234-:1234,tftp=/ala-lpggp21/amann/poky/build-arm/tmp/deploy/images/qemuarm64 -drive id=disk0,file=/ala-lpggp21/amann/poky/build-arm/tmp/deploy/images/qemuarm64/core-image-base-qemuarm64-20201022184758.rootfs.ext4,if=none,format=raw -device virtio-blk-device,drive=disk0 -show-cursor -device VGA,edid=on -device qemu-xhci -device usb-tablet -device usb-kbd -object rng-random,filename=/dev/urandom,id=rng0 -device virtio-rng-pci,rng=rng0 -nographic -machine virt -cpu cortex-a57 -m 512 -device virtio-serial-device -chardev null,id=virtcon -device virtconsole,chardev=virtcon -kernel /ala-lpggp21/amann/poky/build-arm/tmp/deploy/images/qemuarm64/Image--5.4.50+git0+416566e1f0_94667198aa-r0-qemuarm64-20201021224021.bin -append \"root=/dev/vda rw  console=ttyS0 console=ttyS0 mem=512M ip=dhcp console=ttyAMA0\" "
            },
            "problemMatcher": []

        }
    ],
    "inputs": [
        {
          "id": "maketarget",
          "type": "promptString",
          "description": "Make target.",
          "default": "all"
        }
    ]
}
